{
    "manifest_version": 3,
    "name": "bili video playback",
    "description": "adjust playback for bili player",
    "version": "0.1",
    "icons": {
        "48": "48.png"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": "48.png"
    },
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://www.bilibili.com/video/*"
    ]
}